extends ../layout

block content
  div.header
    h1 The Zine
  div.art
    div.article
      if (article.isDark)
        div.title(style='background-image: url('+((article.backgroundImg)? "#{article.backgroundImg}":"../images/light.png")+'); color: white;')
          h3
            a(href='/articles/' + article._id) #{article.title}
          h3.edit
            a(href='/articles/' + article._id + '/edit') Edit
        div.excerpt
          p= article.excerpt
      else
        div.title(style='background-image: url('+((article.backgroundImg)? "#{article.backgroundImg}":"../images/light.png")+'); color: black;')
          h3
            a(href='/articles/' + article._id) #{article.title}
          h3.edit
            a(href='/articles/' + article._id + '/edit') Edit
        div.excerpt
          p= article.excerpt
